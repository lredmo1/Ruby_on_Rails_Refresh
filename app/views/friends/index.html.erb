<h1>Friends</h1>

<table class="table table-striped table-hober table-bordered">
  <thead class="table-dark">
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Twitter</th>
      <th scope="col">User ID</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
		<% if friend.user === current_user %>
		<tr>
		<td><%= friend.first_name %></td>
		<td><%= friend.last_name %></td>
		<td><%= friend.email %></td>
		<td><%= friend.twitter %></td>
		<td><%= friend.user_id %></td>
		<td><%= link_to "Show", friend %></td>
		<td><%= link_to "Edit", edit_friend_path(friend) %></td>
		<td><%= button_to 'Delete', friend, method: :delete%></td>
		</tr>
		<% end %>
	<% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>





